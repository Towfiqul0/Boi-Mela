<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageViewIcon"
        android:layout_width="237dp"
        android:layout_height="183dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        app:srcCompat="@drawable/boimela_2019_edit" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="265dp"
        android:layout_marginRight="50dp"
        android:fontFamily="sans-serif-light"
        android:textColor="#000"
        android:hint=" E-mail Address"
        android:textColorHint="@color/texthint_color" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="302dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="340dp"
        android:layout_marginRight="50dp"
        android:fontFamily="sans-serif-light"
        android:hint=" ***********"
        android:inputType="textPassword"
        android:textColor="#000"
        android:textColorHint="@color/texthint_color"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageViewUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="274dp"
        android:layout_marginRight="302dp"
        android:layout_toLeftOf="@id/editTextEmail"
        android:src="@drawable/icon_user_72" />

    <ImageView
        android:id="@+id/imageViewUserPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewUserEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="349dp"
        android:layout_marginRight="302dp"
        android:layout_toLeftOf="@id/editTextPassword"
        android:src="@drawable/icon_for_password_72" />

    <TextView
        android:id="@+id/textViewForgotPassword"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="387dp"
        android:layout_marginRight="88dp"
        android:fontFamily="casual"
        android:gravity="right"
        android:text="Forgot Password?"
        android:textColor="#FFFFFF"
        android:textSize="13sp" />

    <android.support.v7.widget.CardView
        android:id="@+id/CardViewLogIn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="430dp"
        android:layout_marginRight="50dp"
        app:cardBackgroundColor="@color/login_button_background_color"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/CardViewLogIn">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:text="Log In"
                android:textColor="#FFFFFF"
                android:textSize="26sp"
                android:textStyle="bold"
                android:typeface="monospace" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="529dp"
        android:layout_marginRight="50dp" />




</RelativeLayout>